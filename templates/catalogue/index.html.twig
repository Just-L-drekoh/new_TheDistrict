{% extends 'base.html.twig' %}

{% block title %}The District | Accueil
{% endblock %}

{% block body %}
	<video width="100%" class="d-none d-md-flex" loop autoplay muted>
		<source src="{{asset ('img/images_the_district/restaurant.mp4')}}" type="video/mp4">
	</video>


	<div class="container result">
		{% if  results is not empty %}
			<h3>Resultats</h3>


			{% for plat in results %}
				<r class="card justify-content-center d-flex col 3">
					<h4>{{ plat.libelle }}:</h4>
					<img class="p-0 m-0 img-result" src="{{ asset ('/img/images_the_district/food/' ~ plat.image) }}">
					<p>{{ plat.description }}</p>
					<a class="btn btn-primary btn-link" href="{{path ('addPanier',{'id': plat.id}) }}">Ajouter au panier</a>

				</r>
			{% endfor %}

		{% endif %}
	</div>


	<div class="ctn_text mb-2 mt-4 m-0 p-0">
		<div
			class="container">
			{#restaurant text & desc#}
			<div id="presentation_restaurant" class="style_text"></div>

			<div id="carouselExampleSlidesOnly" class="carousel slide w-50 justify-content-center d-flex mx-auto mt-4 mb-4 d-none d-md-block" data-bs-ride="carousel">
				<div class="carousel-inner ">
					<div class="carousel-item active">
						<img src="{{asset ('img/images_the_district/img-presentation.jpg')}}" class="d-block w-100" alt="img_presentation">
					</div>
					<div class="carousel-item">
						<img src="{{asset ('img/images_the_district/img-salle.jpg')}}" class="d-block w-100" alt="...">
					</div>
					<div class="carousel-item">
						<img src="{{asset ('img/images_the_district/img-bar.jpg')}}" class="d-block w-100" alt="...">
					</div>
				</div>
			</div>

			<div id="description_restaurant" class="style_text d-none d-md-flex"></div>
			{# test #}
		</div>
	</div>


	<h3>Nos best-Sellers (Categories)</h3>
	<section class="ctn_categories row mb-2 d-flex justify-content-around m-0 p-0">
		{% for categorie in categories %}
			<div class="card col-10 col-md-5 col-lg-3 p-0 mx-1">
				<img class="p-0 m-0 img-categories" src="{{ asset ('/img/images_the_district/category/' ~ categorie.image) }}" alt="{{ categorie.libelle }}">
				<div class="card-body">
					<h2>{{ categorie.libelle }}</h2>
					<a class="btn btn-primary btn-link" href="{{ path ('plats_cat',{'libelle': categorie.libelle}) }}">Voir les plats</a>
				</div>
			</div>
		{% endfor %}
	</section>
	<h3>Nos best-Sellers (Plats)</h3>
	<section class="ctn_best_plats row d-flex justify-content-around m-0 p-0">
		{% for plat in plats %}
			<div class="card col-10 col-md-5 col-lg-3 p-0 mx-1">
				<img class="p-0 m-0 img-plats" src="{{ asset ('/img/images_the_district/food/' ~ plat.image) }}" alt="{{ plat.libelle }} ">
				<div class="card-body">
					<h2>{{ plat.libelle }}</h2>
					<a class="btn btn-primary btn-link" href="{{path ('addPanier',{'id': plat.id}) }}">Ajouter au panier</a>
				</div>
			</div>
		{% endfor %}
	</section>
{% endblock %}
