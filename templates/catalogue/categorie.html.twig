{% extends 'base.html.twig' %}

{% block title %}The District | Categorie{% endblock %}
{% block body %}

    <div class="container-fluid ctn-title mb-2">
        <h1>CATEGORIES</h1>
    </div>


    <div class="ctn_text mb-2">
        <div class="container">

<div id="presentation_categorie" class="style_text"></div>

        </div>
    </div>

<h3>Voici Toutes Nos Categories</h3>
    <section class="ctn_categories row mb-4 d-flex justify-content-around m-0 p-0">
        {% for categorie in categories %}
            <div class="card col-10 col-sm-6 col-md-3 p-0">
                <img class="p-0 m-0 img-categories" src="{{ asset ('/img/images_the_district/category/' ~ categorie.image) }}" alt="{{ categorie.libelle }}">
                <div class="card-body">
                    <h2>{{ categorie.libelle }}</h2>
                    <a  class="btn btn-primary btn-link" href="{{ path ('plats_cat',{'libelle': categorie.libelle}) }}">Voir les plats</a>
                </div>
            </div>
        {% endfor %}
    </section>
{% endblock %}
