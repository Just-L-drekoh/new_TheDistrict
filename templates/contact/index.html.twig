{% extends 'base.html.twig' %}

{% block title %}The District |Contact
{% endblock %}

{% block body %}
	<div class="container-fluid ctn_plats_cat mb-2 ">
		<h1>CONTACT</h1>
	</div>


	<div class="container">

		{{ form_start(form) }}
		<div class="error">
			{{form_errors(form)}}
		</div>

		<div class="row">

			<div class="col-9 d-flex justify-content-center mb-2">
				{{form_row(form.nom)}}
			</div>
			<div class="col-9 d-flex justify-content-center mb-2">
				{{form_row(form.prenom)}}
			</div>
			<div class="col-9 d-flex justify-content-center mb-2">
				{{form_row(form.email)}}
			</div>
			<div class="col-9 d-flex justify-content-center mb-2">
				{{form_row(form.telephone)}}
			</div>
			<div class="col-9 d-flex justify-content-center mb-2">
				{{form_row(form.demande)}}
			</div>

		</div>
		{{form_end(form)}}
	</div>
{% endblock %}
